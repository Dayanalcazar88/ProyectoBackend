<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">

                    <h3 class="text-uppercase">editar una persona</h3>
                </div>
                <div class="card-body">

                    <form action="/edit/{{persona.id}}" method="post" enctype="multipart/form-data">
                    <div class="input-group mt-2">
                            <label for="name" class="input-group-text"> <b>Nombre Persona </b></label>
                            <input class="form-control" type="text" name="name" id="name" placeholder="Ejemplo: dayana alcazar" value="{{persona.name}}" autofocus required >
                        </div>    

                        <div class="input-group mt-2">
                            <label for="last_name" class="input-group-text"> <b>apellido  persona </b></label>
                            <input class="form-control" type="text" name="last_name" id="last_name" placeholder="Ejemplo: dayana alcazar" value="{{persona.last_name}}"   required >
                        </div>  

                        <div class="input-group mt-2">
                            <label for="age" class="input-group-text"> <b>age Persona </b></label>
                            <input class="form-control" type="number" name="age" id="age" placeholder="0" value="{{persona.age}}" required>
                        </div>           

                        <div class="input-group mt-2">
                            <input class="form-control" type="file" name="file" id="file">
                        </div>

                        {{#if persona.imagen}}
                            <div class="input-group mt-2">
                                <img src="/uploads/{{persona.imagen}}" class="card-img-top mx-auto m-2 rounded-circle" style="width: 150px; height: 150px;display:block;">
                            </div>
                        {{/if}}
                        

                    <!---crear boton azul de crear persona-->
                    <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> actualizar </button>
                        </div>

                    </form>


                </div>
            </div>
        </div>
    </div>
</div>