<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">

                    <h3 class="text-uppercase">crear nueva persona</h3>
                </div>
                <div class="card-body">

                    <form action="/add" method="post">
                    <div class="input-group mt-2">
                            <label for="name" class="input-group-text"> <b>Nombre Persona </b></label>
                            <input class="form-control" type="text" name="name" id="name" placeholder="Ejemplo: dayana alcazar" autofocus required >
                        </div>    

                        <div class="input-group mt-2">
                            <label for="last_name" class="input-group-text"> <b>apellido  persona </b></label>
                            <input class="form-control" type="text" name="last_name" id="last_name" placeholder="Ejemplo: dayana alcazar" autofocus required >
                        </div>  

                        <div class="input-group mt-2">
                            <label for="age" class="input-group-text"> <b>age Persona </b></label>
                            <input class="form-control" type="number" name="age" id="age" placeholder="0" autofocus required>
                        </div>               
                    <!---crear boton azul de crear persona-->
                    <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Crear </button>
                        </div>

                    </form>


                </div>
            </div>
        </div>
    </div>
</div>